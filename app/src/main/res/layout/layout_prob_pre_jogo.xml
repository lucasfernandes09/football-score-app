<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:background="@drawable/background_1"
    android:elevation="2dp"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/textView25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="8dp"
        android:text="Probabilidades Pré-Jogo" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Vitória" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.github.lzyzsd.circleprogress.ArcProgress
                android:id="@+id/pC"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                custom:arc_bottom_text="Casa"
                custom:arc_finished_color="@color/colorRed"
                custom:arc_suffix_text_padding="-5dp"
                custom:arc_text_color="@color/colorRed"
                custom:arc_text_size="20sp"
                custom:arc_unfinished_color="@android:color/darker_gray" />

            <com.github.lzyzsd.circleprogress.ArcProgress
                android:id="@+id/pE"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                custom:arc_bottom_text="Empate"
                custom:arc_bottom_text_size="8sp"
                custom:arc_finished_color="@color/colorText"
                custom:arc_suffix_text_padding="-5dp"
                custom:arc_text_color="@color/colorText"
                custom:arc_text_size="20sp"
                custom:arc_unfinished_color="@android:color/darker_gray" />

            <com.github.lzyzsd.circleprogress.ArcProgress
                android:id="@+id/pV"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                custom:arc_bottom_text="Vis"
                custom:arc_finished_color="@color/colorAccent"
                custom:arc_suffix_text_padding="-5dp"
                custom:arc_text_color="@color/colorAccent"
                custom:arc_text_size="20sp"
                custom:arc_unfinished_color="@android:color/darker_gray" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Gols" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.github.lzyzsd.circleprogress.ArcProgress
                android:id="@+id/p3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                custom:arc_bottom_text="Até 3"
                custom:arc_finished_color="@color/colorRed"
                custom:arc_suffix_text_padding="-5dp"
                custom:arc_text_color="@color/colorRed"
                custom:arc_text_size="20sp"
                custom:arc_unfinished_color="@android:color/darker_gray" />

            <com.github.lzyzsd.circleprogress.ArcProgress
                android:id="@+id/pMais3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                custom:arc_bottom_text="+ de 3"
                custom:arc_finished_color="@color/colorAccent"
                custom:arc_suffix_text_padding="-5dp"
                custom:arc_text_color="@color/colorAccent"
                custom:arc_text_size="20sp"
                custom:arc_unfinished_color="@android:color/darker_gray" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Ambas Marcam" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.github.lzyzsd.circleprogress.ArcProgress
                android:id="@+id/pS"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                custom:arc_bottom_text="Sim"
                custom:arc_finished_color="@color/colorRed"
                custom:arc_suffix_text_padding="-5dp"
                custom:arc_text_color="@color/colorRed"
                custom:arc_text_size="20sp"
                custom:arc_unfinished_color="@android:color/darker_gray" />

            <com.github.lzyzsd.circleprogress.ArcProgress
                android:id="@+id/pN"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                custom:arc_bottom_text="Não"
                custom:arc_finished_color="@color/colorAccent"
                custom:arc_suffix_text_padding="-5dp"
                custom:arc_text_color="@color/colorAccent"
                custom:arc_text_size="20sp"
                custom:arc_unfinished_color="@android:color/darker_gray" />

        </TableRow>

    </TableLayout>

</LinearLayout>