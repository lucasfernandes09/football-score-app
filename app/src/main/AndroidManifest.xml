<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.app1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.ConfigActivity"
            android:label="Configurações" />
        <activity android:name=".activities.user.AlterarSenhaActivity"
            android:label="Alterar Senha"/>
        <activity android:name=".activities.user.UsuarioLogadoActivity" />
        <activity android:name=".activities.user.LoginActivity"
            android:label="Login" />
        <activity android:name=".activities.user.CadastroUsuarioActivity"
            android:label="Cadastro"/>
        <activity android:name=".activities.EquipeActivity" />
        <activity android:name=".activities.JogosCompeticaoActivity" />
        <activity android:name=".activities.JogoActivity" />
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>